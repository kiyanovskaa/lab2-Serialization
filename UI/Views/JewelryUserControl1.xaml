<UserControl x:Class="UI.Views.JewelryUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" Width="300" Height="300">
    <Grid>
        <DataGrid AutoGenerateColumns="True" Height="300" Name="dataGrid" VerticalAlignment="Top" Width="300"
                 ItemsSource="{Binding Path=JewelryList}" SelectedItem="{Binding Path=SelectedJewelry, Mode=TwoWay}"/>
    </Grid>
</UserControl>
